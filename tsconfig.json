{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "es6",
        "target": "es6", 
        "sourceMap": true,    
         "outDir": "./dist", 
        "types": [
            "@babylonjs/core",
            "@babylonjs/gui",
            "@babylonjs/materials",
        ],
        "moduleResolution": "node",
        "rootDir": "."                    
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.js"
    ]
}